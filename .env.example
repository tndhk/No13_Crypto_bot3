# APIキー設定（バックテストでは不要）
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# 基本設定
SYMBOL=BTCUSDT
SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT  # 複数ペア対応
INTERVAL=1h
QUANTITY=0.025
INITIAL_BALANCE=10000
LOG_LEVEL=INFO
USE_CACHED_DATA=true

# バックテスト期間
START_TIME=2024-01-01T00:00:00
END_TIME=2025-04-03T00:00:00

# 基本パラメータ - マルチ戦略最適化
SHORT_WINDOW=3
LONG_WINDOW=16
STOP_LOSS_PERCENT=1.5
TAKE_PROFIT_PERCENT=12.0

# 複合シグナルの重み - 調整済み
WEIGHT_MA=0.2
WEIGHT_RSI=0.3
WEIGHT_MACD=0.2
WEIGHT_BB=0.2
WEIGHT_BREAKOUT=0.1

# シグナル閾値 - 最適化値
BUY_THRESHOLD=0.15
SELL_THRESHOLD=0.05

# 取引実行設定
EXECUTION_DELAY=1
SLIPPAGE_MEAN=0.0005
SLIPPAGE_STD=0.0003
MAKER_FEE=0.0010
TAKER_FEE=0.0010

# 機能フラグ
USE_COMPLEX_SIGNAL=true
USE_PRICE_SIMULATION=true
USE_MULTI_STRATEGY=true

# 戦略の有効/無効
ENABLE_MEAN_REVERSION=true
ENABLE_TREND=false
ENABLE_BREAKOUT=false

# Mean Reversion 強化パラメータ
MR_RSI_UPPER=60
MR_RSI_LOWER=40
MR_RSI_EXTREME_UPPER=75
MR_RSI_EXTREME_LOWER=25
MR_BB_UPPER_FACTOR=1.003
MR_BB_LOWER_FACTOR=0.997
MR_Z_SCORE_THRESHOLD=1.5
MR_MA_DEVIATION=0.015
MR_PRICE_BOUNCE=0.002

# 戦略統合パラメータ
STRATEGY_BUY_THRESHOLD=0.25
STRATEGY_SELL_THRESHOLD=-0.25
STRATEGY_ADX_THRESHOLD=25

# Trend戦略パラメータ（ENABLE_TREND=trueの場合に使用）
TREND_ADX_THRESHOLD=25

# Breakout戦略パラメータ（ENABLE_BREAKOUT=trueの場合に使用）
BREAKOUT_LOOKBACK=20
BREAKOUT_THRESHOLD=0.002

# 高度なリスク管理パラメータ
MAX_DRAWDOWN_PERCENT=10.0
DAILY_LOSS_LIMIT_PERCENT=3.0
MAX_CONSECUTIVE_LOSSES=3

# トレーリングストップ
TRAILING_STOP_ACTIVATION=1.5
TRAILING_STOP_DISTANCE=0.8

# 部分利確
PARTIAL_TP_1=1.5
PARTIAL_TP_1_RATIO=0.3
PARTIAL_TP_2=3.0
PARTIAL_TP_2_RATIO=0.3

# 市場環境フィルター
MIN_ADX_FOR_TREND=25
MAX_ADX_FOR_MR=20